const s32 PLATFORM_LINUX = 0;
const s32 PLATFORM_WINDOWS = 1;
const s32 PLATFORM_MACOS = 2;
const s32 PLATFORM_FREEBSD = 3;
const s32 PLATFORM_OPENBSD = 4;
const s32 PLATFORM_UNKNOWN = 5;

const s32 PLATFORM = __builtin_PLATFORM;

const bool PLATFORM_IS_UNIX  = PLATFORM != PLATFORM_WINDOWS;
const bool PLATFORM_IS_WIN32 = PLATFORM == PLATFORM_WINDOWS;
